@model KorteBroeken.Models.WeerModel
@{
    ViewData["Title"] = Model.KanKorteBroekAan ? "Ja! Korte broek aan!" : "Nee, lange broek aan";
}

<div class="weer-resultaat-container">
    <div class="resultaat @(Model.KanKorteBroekAan ? "resultaat-ja" : "resultaat-nee")">
        <div class="weer-info">
            <h1 class="antwoord-tekst">@Model.Bericht</h1>
            <div class="weer-details">
                <div class="weer-item">
                    <span class="weer-label">Temperatuur:</span>
                    <span class="weer-waarde">@Model.Temperatuur Â°C</span>
                </div>
                <div class="weer-item">
                    <span class="weer-label">Regenkans:</span>
                    <span class="weer-waarde">@Model.Regenkans %</span>
                </div>
            </div>
        </div>
        <div class="weer-afbeelding">
            @if (Model.KanKorteBroekAan)
            {
                <img src="~/images/korte-broek-ja.jpg" alt="Korte broek" />
            }
            else
            {
                <img src="~/images/korte-broek-nee.jpg" alt="Lange broek" />
            }
        </div>
    </div>
    
    <div class="navigatie-knoppen">
        <a href="/KorteBroek" class="btn btn-primary terug-knop">Terug naar de vraag</a>
    </div>
</div>